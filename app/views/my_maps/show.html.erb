<% if flash.any? %>
  <div class="alert alert-success" role="alert">
    <a href="#" class="alert-link"><%= flash[:notice] %></a>
  </div>
<% end %>

<div id="my_map" class="my_custom_map"></div>

<div id="my_c_map_content_container" class="disable_map">
    <ul class="disable_map">
      <li><h1><%= @my_map["name"] %></h1></li>
      <li><span><%= @my_map["description"] %></span></li>
      <% @my_map_photos.each do |p| %>
        <li>
          <div class="c_map_content">
            <h4><%= p.name %></h4>
            <img class="my_map_image" id="photo<%= p.photo_id %>" src=<%= p.photo.image_url %> />
            <span><%= p.description %></span>
          </div>
        </li>
      <% end %>
      <li><%= link_to "Edit this map.", edit_my_map_path(@my_map) if current_user %></li>
    </ul>
  </div>

<%= javascript_tag do %>
  $( document ).ready( loadMyMapView() )
<% end %>
